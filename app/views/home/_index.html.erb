<p id="notice"><%= notice %></p>

<h1>Friends</h1>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th colspan="3">action</th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td>
        <%= link_to 'Show', home_path(friend) ,class: 'btn btn-secondary' %>
        <%#= link_to 'Edit', edit_friend_path(friend), class: 'btn btn-secondary' %>
        <%#= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

